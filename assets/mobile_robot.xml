<mujoco model="mobile_robot">
  <compiler inertiafromgeom="true" angle="radian"/>
  <option gravity="0 0 -9.81" timestep="0.002"/>

  <size nuserdata="0"/>

  <default>
    <geom rgba="0.8 0.8 0.8 1" condim="3" friction="1 0.1 0.1"/>
    <joint armature="0.0" damping="0.0" stiffness="0.0"/>
  </default>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1=".4 .6 .8" rgb2="0 0 0" width="256" height="256"/>
    <material name="ground"  rgba=".9 .9 .9 1"/>
    <material name="chassis" rgba=".2 .2 .2 1"/>
    <material name="wheel"   rgba=".1 .1 .1 1"/>
  </asset>

  <worldbody>
    <!-- 평면 -->
    <geom name="floor" type="plane" size="4 4 0.1" material="ground"/>

    <!-- 베이스: free joint(위치/자세 7자유도) -->
    <body name="base" pos="0 0 0.05">
      <joint name="base_free" type="free"/>
      <geom type="box" size="0.15 0.20 0.05" material="chassis"/>

      <!-- 왼쪽 바퀴 (y축 힌지 회전) -->
      <body name="left_wheel" pos="0  0.21 0.05">
        <joint name="left_wheel_joint" type="hinge" axis="0 1 0" limited="false"/>
        <geom type="cylinder" size="0.08 0.02" material="wheel"/>
      </body>

      <!-- 오른쪽 바퀴 -->
      <body name="right_wheel" pos="0 -0.21 0.05">
        <joint name="right_wheel_joint" type="hinge" axis="0 1 0" limited="false"/>
        <geom type="cylinder" size="0.08 0.02" material="wheel"/>
      </body>
    </body>
  </worldbody>

  <actuator/>
</mujoco>
